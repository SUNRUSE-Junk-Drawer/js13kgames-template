{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "GCC Win32",
      "type": "shell",
      "command": "mkdir dist\\win32 && i686-w64-mingw32-gcc src/main.c temp/win32/win32.res -o dist/win32/engine.exe",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "GCC Linux",
      "type": "shell",
      "command": "gcc src/main.c `pkg-config --cflags --libs gtk+-2.0` -o dist/linux/engine",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Watch for changes",
      "type": "shell",
      "command": "npm run-script watch",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "One-off build",
      "type": "shell",
      "command": "npm run-script oneOff",
      "group": "build",
      "problemMatcher": []
    }
  ]
}
